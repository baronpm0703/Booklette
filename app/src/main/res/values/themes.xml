<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Booklette" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Booklette.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/booklette_logo</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Booklette</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice.Shimmer" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/shimmerColor</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="Colors_Product_Type_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/reverse_chip_background_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/reverse_chip_text_color</item>
    </style>

    <style name="Color_Booklette_Discount_Choice.MaterialComponents.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/reverse_chip_background_color_discount_booklette</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_discount_booklette</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/reverse_chip_text_color_discount_booklette</item>

    </style>

    <style name="Color_Ship_Discount_Choice.MaterialComponents.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/reverse_chip_background_color_discount_ship</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_discount_ship</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/reverse_chip_text_color_discount_ship</item>
    </style>


    <style name="Colors_Sort_Type_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/reverse_chip_background_color</item>
        <item name="android:textColor">@color/reverse_chip_text_color</item>
    </style>



</resources>