<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/shopName"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vo Chanh Tin bookstore"></TextView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="6dp"
            android:background="@drawable/round_corner_cart_item">



            <ImageView
                android:id="@+id/bookCover"
                android:layout_width="72dp"
                android:layout_height="102dp"
                android:src="@drawable/book_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.619">

            </ImageView>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="270dp"
                android:layout_height="97dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toEndOf="@+id/bookCover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.68">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bookTitle"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:text="Tuesday Mooney Talks to Ghosts"
                        android:textColor="@color/black"
                        android:textSize="6pt"
                        android:textStyle="bold"></TextView>

                    <RadioButton
                        android:id="@+id/btnSelectItem"
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="6pt" />
                </LinearLayout>


                <TextView
                    android:id="@+id/bookOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Kate Racculia"
                    android:textColor="@color/black"
                    android:textSize="5pt">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCartItemMinus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/custombuttonselectsize"
                            android:text="-"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor="@color/black"
                            android:textSize="21dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCartItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="01" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCartItemAdd"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/custombuttonselectsize"
                            android:backgroundTint="@color/black"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="21dp"
                            tools:ignore="TouchTargetSizeCheck" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/bookPrice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="$33.00"
                        android:textColor="@color/black"
                        android:textSize="7pt"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>