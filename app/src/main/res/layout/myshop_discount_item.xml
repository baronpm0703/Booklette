<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="146dp"
            android:layout_height="57dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:background="@drawable/myshop_discount_card">

        <Button
                android:cornerRadius="100dp"
                android:text="@string/myshop_discount_save"
                android:layout_width="47dp"
                android:layout_height="24dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/saveDiscountBtn"
                android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="10sp" android:background="@drawable/button_discount_save_button"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"/>
        <TextView
                android:text="@string/myshop_discount_flavor_text"
                android:layout_width="62dp"
                android:layout_height="13dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="6dp"
                android:layout_marginStart="8dp" android:id="@+id/textView26" android:textSize="9sp"
                android:textStyle="bold" android:textColor="#B50000"/>
        <TextView
                android:text="XX%"
                android:layout_width="64dp"
                android:layout_height="13dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/discountPercentText" android:textSize="9sp"
                android:textStyle="bold" android:textColor="#B50000"
                app:layout_constraintTop_toBottomOf="@+id/textView26"
        />
        <TextView
                android:text="@string/myshop_discount_minimum"
                android:layout_width="34dp"
                android:layout_height="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/textView27" android:textSize="4sp"
                android:textColor="#B50000" android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/discountPercentText"/>
        <TextView
                android:text="XXXk"
                android:layout_width="19dp"
                android:layout_height="9dp"
                android:id="@+id/discountMinimumText" android:textSize="4sp"
                android:textColor="#B50000" android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/discountPercentText"
                app:layout_constraintStart_toEndOf="@+id/textView27"/>
        <TextView
                android:text="@string/myshop_discount_expire_flavor_text"
                android:layout_width="27dp"
                android:layout_height="6dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/textView29" android:textSize="4sp"
                android:textColor="#6E6E6E"
                android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/textView27"/>
        <TextView
                android:text="0"
                android:layout_width="8dp"
                android:layout_height="6dp"
                android:id="@+id/discountExpireText" android:textSize="4sp"
                android:textColor="#6E6E6E"
                android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/textView27"
                app:layout_constraintStart_toEndOf="@+id/textView29"/>
        <TextView
                android:text="@string/myshop_discount_expire_day"
                android:layout_width="27dp"
                android:layout_height="6dp"
                android:id="@+id/textView31" android:textSize="4sp"
                android:textColor="#6E6E6E"
                android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/textView27"
                android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/discountExpireText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>