    <RelativeLayout
            android:id="@+id/avtMethodDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#169F9E9E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/slideDownTab"
                android:layout_width="110dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/slide_down_tab"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/takePhotoBtn"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_below="@+id/slideDownTab"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

            <ImageView
                    android:src="@drawable/profilesetting_takephoto"
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="29dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="19dp"
            />
            <TextView
                    android:text="@string/profilesetting_editprofile_avt_takephoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView37"
                    app:layout_constraintStart_toEndOf="@+id/imageView10" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="31dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="30dp" android:layout_marginEnd="230dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black"
                    android:textStyle="bold" android:layout_marginStart="29dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choosefromGalleryBtn"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_below="@+id/takePhotoBtn"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp">

            <ImageView
                    android:src="@drawable/profilesetting_choosefromgallery"
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="29dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="19dp"
            />
            <TextView
                    android:text="@string/profilesetting_editprofile_avt_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView38"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="31dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" android:layout_marginStart="29dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginEnd="194dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>