<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:background="#FFFFFF"
>
    <ImageView
            android:src="@drawable/back"
            android:layout_width="31dp"
            android:layout_height="29dp" android:id="@+id/backBtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/manageshop_program_shopvoucher_btn"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/backBtn"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout7" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/backBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/noProgramsTV">
        <Button
                android:text="@string/manageshop_program_comingsoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/comingSoonTabBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/myshop_book_info_card"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textSize="10dp"
                android:elevation="10dp"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp" app:layout_constraintEnd_toStartOf="@+id/happeningTabBtn"
                android:layout_marginEnd="12dp"
                android:textAllCaps="false"/>
        <Button
                android:text="@string/manageshop_program_happening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/happeningTabBtn"
                android:background="@drawable/myshop_book_info_card"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textSize="10dp"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/comingSoonTabBtn"
                android:textAllCaps="false" app:layout_constraintEnd_toStartOf="@+id/finishedTabBtn"
                android:layout_marginEnd="12dp"/>
        <Button
                android:text="@string/manageshop_program_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/finishedTabBtn"
                android:background="@drawable/myshop_book_info_card"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textSize="10dp"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:textAllCaps="false" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/happeningTabBtn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="@string/manageshop_program_shopvoucher_none"
            android:layout_width="0dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:background="@drawable/manageshop_discount_none"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#CE7C00"
            android:layout_height="wrap_content" android:id="@+id/noProgramsTV"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:gravity="center"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addBookBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noProgramsTV"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/bookListScrollViewContent"/>
    </ScrollView>
    <Button
            android:text="@string/manageshop_program_shopvoucher_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/addBookBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/manageshop_bottom_btn"
            android:textColor="@color/white"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>