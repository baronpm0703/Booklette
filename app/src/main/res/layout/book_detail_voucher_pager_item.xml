<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voucher_stroke_book_detail"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imFreeShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free_ship_img">

        </ImageView>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imFreeShip"
            android:layout_alignRight="@+id/imFreeShip"
            android:layout_alignTop="@+id/imFreeShip"
            android:layout_alignBottom="@+id/imFreeShip"
            android:text="Free ship"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="8pt">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/abcde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="21"
            android:maxLines="1"
            android:text="Maximum discount 200k"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum order 70k"
            android:textColor="@color/black"
            android:textSize="6pt">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiring soon: 1 day(s)"
            android:textSize="4pt">

        </TextView>

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_marginRight="10dp"
        android:padding="0dp"
        android:minHeight="30dp"
        android:minWidth="40dp"
        android:textColor="@color/white"
        android:textSize="4pt"
        android:background="@drawable/round_corner_button_solid_color_book_detail_pink">

    </Button>

</LinearLayout>