<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/myshop_book_info_card"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="330dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:elevation="5dp"
            android:layout_marginEnd="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="0dp"
    >

        <TextView
                android:text="@string/manageshop_mybooks_boost_error"
                android:layout_width="wrap_content"
                android:layout_height="31dp" android:id="@+id/boostErrorTv"
                android:gravity="center"
                android:textColor="#040404" android:textStyle="bold" android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
                android:layout_marginEnd="62dp" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="@string/manageshop_mybooks_boost_error2"
                android:layout_width="120dp"
                android:layout_height="wrap_content" android:id="@+id/boostError2Tv"
                android:gravity="center"
                android:textColor="#040404" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boostErrorTv"
                android:layout_marginTop="1dp"/>
        <TextView
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/boostError3Tv"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#040404" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
                android:layout_marginEnd="0dp" app:layout_constraintEnd_toStartOf="@+id/boostError4Tv"
                app:layout_constraintTop_toBottomOf="@+id/boostError2Tv"
                android:layout_marginTop="1dp"/>
        <TextView
                android:text="@string/manageshop_mybooks_boost_error3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/boostError4Tv"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#040404" android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/boostError3Tv" android:layout_marginStart="0dp"
                android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boostError2Tv"
                android:layout_marginTop="1dp"/>
        <Button
                android:text="@string/manageshop_mybooks_boost_error4"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/dismissBtn"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/manageshop_addbook_success_back_btn"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/boostError4Tv" android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:paddingHorizontal="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>