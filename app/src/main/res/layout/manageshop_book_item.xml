<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="@drawable/myshop_book_info_card"
            android:elevation="5dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp">

        <ImageView
                android:layout_width="105dp"
                android:layout_height="172dp" app:srcCompat="@drawable/myshop_book_example"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
                android:id="@+id/bookImg" app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:background="@drawable/myshop_book_info_card" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="14dp" android:layout_marginBottom="14dp"/>
        <TextView
                android:text="Example Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookGenreText"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/bookImg" app:layout_constraintTop_toTopOf="@+id/bookImg"
                android:layout_marginTop="5dp" app:layout_constraintBottom_toTopOf="@+id/bookNameText"/>
        <TextView
                android:text="Example Name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/bookNameText"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/bookImg" android:textStyle="bold"
                android:textColor="#000000" android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/bookGenreText"
                android:textSize="17sp" android:lines="2"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toTopOf="@+id/bookAuthorText" android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Example Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookAuthorText"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/bookImg" android:textSize="10sp" android:textStyle="bold"
                android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/bookNameText"
                android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/bookPriceText"/>
        <TextView
                android:text="Example Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookPriceText"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/bookImg" android:textSize="17sp"
                android:textStyle="bold" android:lines="1"
                android:textColor="#000000"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/bookAuthorText"
        />
        <Button
                android:text="@string/manageshop_mybooks_boost"
                android:layout_width="0dp"
                android:layout_height="35dp" android:id="@+id/boostBookBtn"
                android:layout_marginTop="16dp"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bookPriceText"
                android:background="@drawable/manageshop_book_item_boost_btn" android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/bookImg" app:layout_constraintEnd_toStartOf="@+id/editBookBtn"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"/>
        <Button
                android:text="@string/manageshop_mybooks_edit"
                android:layout_width="0dp"
                android:layout_height="35dp" android:id="@+id/editBookBtn"
                android:layout_marginTop="16dp"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bookPriceText"
                android:background="@drawable/manageshop_book_item_edit_btn" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/boostBookBtn"
                app:layout_constraintEnd_toStartOf="@+id/deleteBookBtn" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"/>
        <Button
                android:text="@string/manageshop_mybooks_delete"
                android:layout_width="0dp"
                android:layout_height="35dp" android:id="@+id/deleteBookBtn"
                android:layout_marginTop="16dp"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bookPriceText"
                android:background="@drawable/manageshop_book_item_delete_btn" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/editBookBtn" android:layout_marginEnd="18dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>