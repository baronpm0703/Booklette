<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailFragment">

    <LinearLayout
        android:id="@+id/txtBookDetailButtonBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:background="@drawable/square_corner_black_stroke_background">

        </Button>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:background="@drawable/square_corner_button_solid_color_book_detail_pink">

        </Button>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtBookDetailButtonBuy">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/book_detail_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivBookImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/book_cover1">

                    </ImageView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:visibility="gone"
                        android:id="@+id/smRatingStarBook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <per.wsj.library.AndRatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:rating="5"
                                app:bgColor="@color/shimmerColor"
                                app:bgDrawable="@drawable/star"
                                app:starColor="@color/shimmerColor"
                                app:starDrawable="@drawable/star_filled" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="4.7"
                                android:textColor="@color/shimmerColor"
                                android:background="@color/shimmerColor">

                            </TextView>

                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:id="@+id/llRatingStarBook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <per.wsj.library.AndRatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:rating="4.7"
                            app:bgColor="#6E6E6E"
                            app:bgDrawable="@drawable/star"
                            app:starColor="#FFBA49"
                            app:starDrawable="@drawable/star_filled" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="4.7"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smCategoryBook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novel"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor">

                        </TextView>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/txtBookCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novel"
                        android:textColor="#B4B4B4"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smBookName"
                        android:layout_below="@+id/txtBookCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday Mooney Talks to Ghosts"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor"
                            android:textSize="8pt"
                            android:textStyle="bold"/>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/txtBookName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtBookCategory"
                        android:layout_marginTop="5dp"
                        android:text="Tuesday Mooney Talks to Ghosts"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold">

                    </TextView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smAuthorName"
                        android:layout_below="@+id/smBookName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kate Racculia"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor">
                        </TextView>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/txtAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtBookName"
                        android:layout_marginTop="10dp"
                        android:text="Kate Racculia"
                        android:textColor="#898989">

                    </TextView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smBookOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false"
                        android:layout_below="@+id/smAuthorName"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="240.000 VND"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor"
                            android:textSize="5pt">

                        </TextView>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/txtBookOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtAuthorName"
                        android:layout_marginTop="10dp"
                        android:text="240.000 VND"
                        android:textColor="#898989"
                        android:textSize="5pt">

                    </TextView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smBookRealPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false"
                        android:layout_below="@+id/smBookOriginalPrice"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150.000VND"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor"
                            android:textSize="10pt"
                            android:textStyle="bold">

                        </TextView>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/txtBookRealPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtBookOriginalPrice"
                        android:layout_marginTop="15dp"
                        android:text="150.000VND"
                        android:textColor="@color/black"
                        android:textSize="10pt"
                        android:textStyle="bold">

                    </TextView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/smSalePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="false"
                        android:layout_below="@+id/smBookRealPrice"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/voucher_stroke_book_detail_shimmer">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="7dp"
                                android:paddingTop="3dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="3dp"
                                android:text="12% OFF"
                                android:background="@color/shimmerColor"
                                android:textColor="@color/shimmerColor"
                                android:textSize="5pt"
                                android:textStyle="bold">

                            </TextView>

                        </RelativeLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <RelativeLayout
                        android:id="@+id/rlSalePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtBookRealPrice"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner_book_detail_price_off">

                        <TextView
                            android:id="@+id/txtSalePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="3dp"
                            android:paddingRight="7dp"
                            android:paddingBottom="3dp"
                            android:text="12% OFF"
                            android:textColor="@color/black"
                            android:textSize="5pt"
                            android:textStyle="bold">

                        </TextView>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnAddToCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlSalePercent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner_button_solid_color_book_detail_pink"
                        android:text="@string/book_detail_add_to_cart"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnAddToCard"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner_button_solid_color_book_detail_black"
                        android:text="@string/book_detail_add_to_wishlist"
                        android:textColor="@color/white">

                    </Button>

                </RelativeLayout>

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/smVoucherSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="false"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_detail_head">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_detail_voucher"
                    android:textColor="@color/shimmerColor"
                    android:background="@color/shimmerColor"
                    android:textSize="7pt"
                    android:textStyle="bold">

                </TextView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/txtVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/book_detail_voucher"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_detail_head">

            </TextView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/smVoucherBookDetail"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtVoucher"
                app:shimmer_auto_start="false">

                <include layout="@layout/voucher_stroke_book_detail_shimmer"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpVoucherBookDetail"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtVoucher"
                tools:itemCount="1"
                tools:listitem="@layout/book_detail_voucher_pager_item">

            </androidx.viewpager.widget.ViewPager>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/smBookStoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vpVoucherBookDetail">

                <LinearLayout
                    android:background="@color/shimmerColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@color/shimmerColorDarker"

                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Vo Chanh Tin bookstore"
                            android:textColor="@color/shimmerColorDarker"
                            android:background="@color/shimmerColorDarker"
                            android:textSize="8pt"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online 10 minutes last"
                            android:textColor="@color/shimmerColorDarker"
                            android:background="@color/shimmerColorDarker"
                            >

                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/pin_light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Ho Chi Minh City"
                                android:textColor="@color/shimmerColorDarker"
                                android:background="@color/shimmerColorDarker">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/shimmerColorDarker"
                        android:minWidth="80dp"
                        android:minHeight="30dp"
                        android:text="View shop"
                        android:textColor="@color/shimmerColorDarker"
                        android:textSize="5pt">

                    </Button>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:id="@+id/llBookStoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vpVoucherBookDetail">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/book_shop_avatar"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Vo Chanh Tin bookstore"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online 10 minutes last">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pin_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Ho Chi Minh City">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corner_button_solid_color_book_detail_pink"
                    android:minWidth="80dp"
                    android:minHeight="30dp"
                    android:text="View shop"
                    android:textColor="@color/white"
                    android:textSize="5pt">

                </Button>

            </LinearLayout>
            
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/smTxtOtherBook_BookDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBookStoreInfo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher of shop"
                    android:textColor="@color/shimmerColor"
                    android:background="@color/shimmerColor"
                    android:textSize="7pt"
                    android:textStyle="bold">

                </TextView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/txtOtherBookBookDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Voucher of shop"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBookStoreInfo">

            </TextView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/smBookDetailShopVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7dp"
                app:shimmer_auto_start="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOtherBookBookDetail">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <include layout="@layout/shop_voucher_book_detail_item_shimmer"/>
                        <include layout="@layout/shop_voucher_book_detail_item_shimmer"/>
                        <include layout="@layout/shop_voucher_book_detail_item_shimmer"/>
                        <include layout="@layout/shop_voucher_book_detail_item_shimmer"/>
                        <include layout="@layout/shop_voucher_book_detail_item_shimmer"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBookDetailShopVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOtherBookBookDetail"
                tools:itemCount="1"
                tools:listitem="@layout/shop_voucher_book_detail_item">

            </androidx.recyclerview.widget.RecyclerView>

            <com.barryzeha.dotsloadingview.components.DotsLoadingComponent
                android:id="@+id/bookDetailDotLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotColor="@color/shimmerColor"
                app:dotSize="20"
                app:animationDuration="1000"
                app:numberOfDots="4"
                app:dotMargin="4"
                app:dotType="dot"
                app:startAnimation="true"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvBookDetailShopVoucher"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBookDetailMoreDetailPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookDetailDotLoading">

                <TextView
                    android:id="@+id/txtBookDetailOtherBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/bookDetailOtherProduct"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
