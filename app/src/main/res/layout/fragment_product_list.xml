<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductList">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHomeHamburgerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_new_24"></ImageView>

        <TextView
            android:id="@+id/selectedGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Non-Fictions"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search"></ImageView>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Non-Fictions"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Classic"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Fantasy"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Young Adult"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Crime"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Horror"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Sci-fi"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Colors_Product_Type_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Drama"
                android:textAlignment="center"
                android:textStyle="bold"
                app:chipCornerRadius="10dp" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/filter"></ImageView>

        <TextView
            android:id="@+id/tvfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/ivFilter"
            android:text="Filter"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/ivSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toRightOf="@+id/tvfilter"
            android:src="@drawable/baseline_swap_vert_24px"></ImageView>

        <TextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/ivSort"
            android:text="Price: lowest to high"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/ivViewSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/view"></ImageView>

    </RelativeLayout>

    <GridView
        android:id="@+id/gvProductList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:listitem="@layout/fragment_product_list_grid_item"></GridView>


</androidx.constraintlayout.widget.ConstraintLayout>