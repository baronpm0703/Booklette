<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@color/shimmerColor"
            android:background="@drawable/image_round_corner_for_hcmus">
        </ImageView>


        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_book_name_fragment_product_list_item"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/shimmerColor"
            android:textStyle="bold"
            android:textSize="5pt"
            android:background="@color/shimmerColor"
            android:lines="2">
        </TextView>

        <TextView
            android:id="@+id/bookOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_owner_fragment_product_list_item"
            android:textSize="4pt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/shimmerColor"
            android:textColor="@color/shimmerColor">

        </TextView>

        <TextView
            android:id="@+id/bookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_money_fragment_product_list_item"
            android:background="@color/shimmerColor"
            android:textColor="@color/shimmerColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="5pt"
            >

        </TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
