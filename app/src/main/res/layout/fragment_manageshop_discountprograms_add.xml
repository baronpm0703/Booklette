<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:background="#F9F9F9"
>
    <ImageView
            android:src="@drawable/back_black"
            android:layout_width="31dp"
            android:layout_height="29dp" android:id="@+id/backBtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/manageshop_program_discountprogram_add_flavor"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/backBtn"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backBtn" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout7" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="@drawable/myshop_book_info_card"
                    android:elevation="3dp"
            >
                <TextView
                        android:text="@string/manageshop_program_discountprogram_add_chooseproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView44"
                        android:textStyle="bold" android:textColor="#0B0B0B"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                />
                <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView44"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        android:background="@drawable/review_text_editor_round_corner"
                        android:orientation="vertical" android:gravity="center"
                        android:padding="10dp" android:id="@+id/chooseProductBtn">

                    <ImageView
                            android:id="@+id/addProductBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"

                            android:scaleType="centerCrop"
                            android:src="@drawable/managebook_addbookimg_icon"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout8" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="@drawable/myshop_book_info_card"
                    android:elevation="3dp">
                <TextView
                        android:text="@string/manageshop_program_discountprogram_add_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView45"
                        android:textStyle="bold" android:textColor="#0B0B0B"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                />
                <TextView
                        android:text="@string/manageshop_program_discountprogram_add_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView46"
                        android:textColor="#0B0B0B"
                        app:layout_constraintStart_toEndOf="@+id/textView45"
                        android:textSize="11sp" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:hint="@string/manageshop_program_discountprogram_add_name"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/programNameET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView45"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout9" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="@drawable/myshop_book_info_card"
                    android:elevation="3dp">
                <TextView
                        android:text="@string/manageshop_program_discountprogram_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView47"
                        android:textStyle="bold" android:textColor="#0B0B0B"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:focusable="false"
                        android:hint="@string/manageshop_program_discountprogram_add_starttime"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/starttimeET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="8dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView47"
                        app:layout_constraintBottom_toTopOf="@+id/endtimeET"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:focusable="false"
                        android:hint="@string/manageshop_program_discountprogram_add_endtime"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/endtimeET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/starttimeET" android:layout_marginBottom="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout10" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout9"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="@drawable/myshop_book_info_card"
                    android:elevation="3dp">
                <TextView
                        android:text="@string/manageshop_program_discountprogram_add_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView48"
                        android:textStyle="bold" android:textColor="#0B0B0B"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:hint="@string/manageshop_program_discountprogram_add_percent"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/discountPercentET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView48"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/orderLimitET"
                        android:layout_marginEnd="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:hint="@string/manageshop_program_discountprogram_add_limit"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/orderLimitET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toEndOf="@+id/discountPercentET"
                        android:layout_marginStart="8dp" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView48"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout11" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout10"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="@drawable/myshop_book_info_card"
                    android:elevation="3dp">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:inputType="text"
                        android:hint="@string/manageshop_program_discountprogram_add_introduction"
                        android:textColorHint="#9B9B9B"
                        android:ems="10"
                        android:elevation="10dp"
                        android:id="@+id/introductionET"
                        android:background="@color/white"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                    android:text="@string/manageshop_program_discountprogram_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/addProgramBtn"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout11"
                    android:background="@drawable/manageshop_bottom_btn"
                    android:textColor="@color/white"
                    android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>